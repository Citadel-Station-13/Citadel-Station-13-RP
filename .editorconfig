[*]
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.yml]
indent_style = space
indent_size = 2

[*.py]
indent_style = space

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.sql]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
